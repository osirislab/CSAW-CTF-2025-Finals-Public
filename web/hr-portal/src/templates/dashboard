    <script>
        // CSRF protection: base64 of username
        var csrf = btoa("admin");
        document.getElementById('csrfToken').textContent = csrf;
        console.log("CSRF token: " + csrf);
        
        // Form utilities
        function clearForm() {
            document.getElementById('reportForm').reset();
            document.getElementById('report').focus();
        }
        
        // Form validation
        document.getElementById('reportForm').addEventListener('submit', function(e) {
            const reportName = document.getElementById('report').value.trim();
            if (!reportName) {
                e.preventDefault();
                alert('Please enter a report name.');
                return false;
            }
        });
        
        // Auto-focus on load
        window.addEventListener('load', function() {
            document.getElementById('report').focus();
        });
    </script>
